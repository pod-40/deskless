<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PostFragment">



    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btnAddImage"
        android:layout_width="151dp"
        android:layout_height="67dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="Add Image"
        app:layout_constraintBottom_toTopOf="@+id/btnCreatePost"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCreatePost"
        android:layout_width="133dp"
        android:layout_height="52dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etCaption"
        android:layout_width="384dp"
        android:layout_height="58dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Caption..."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnAddImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etAmmenities"
        android:layout_width="389dp"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ammenities.."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/etCaption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etVibe"
        android:layout_width="391dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Vibe"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/etAmmenities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMaxAmountOfPeople"
        android:layout_width="389dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Maximum Amount of People"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/etVibe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="387dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="How long will this event take"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/etMaxAmountOfPeople"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="389dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Location"
        app:layout_constraintBottom_toTopOf="@+id/etTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="128dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toTopOf="@+id/etLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>